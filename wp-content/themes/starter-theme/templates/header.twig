<header class="header">
  <div class="site-navigation">
    {% if fn('has_nav_menu', 'main') %}
      <div class="header-menu main-menu">
        <div class="menu">
          <div class="header-logo">
            <a href="{{ site.link }}" class="logo-link">
              {% if fn('function_exists', 'the_custom_logo') %}
                <img src="{{ fn('wp_get_attachment_image_src', fn('get_theme_mod', 'custom_logo'), 'full' )[0] }}" alt="site logo"/>
                {% if fn('get_option', 'blogdescription')  %}
                  <h1 class="site-title">{{ fn('get_option', 'blogdescription') }}</h1>
                {% endif %}
              {% endif %}
            </a>
          </div>
          <nav class="main-menu-items">
            {% include "menu.twig" with {
              'menu': main_menu.get_items,
              'item_class': 'main-menu-list'
            } %}
            <div class="header-search">
              <span class="search-icon">
                <svg class="icon">
                  <use xlink:href="{{ theme.path }}/build/spritemap.svg#search"></use>
                </svg>
              </span>
              <form class="main-search">
                <label for="search">
                  <input class="search-input" placeholder="Search" type="search" name="s" id="search">
                </label>
                <a class="search-submit" type="submit">
                  <svg class="icon search-arrow">
                    <use xlink:href="{{ theme.path }}/build/spritemap.svg#search-arrow" class="search-arrow-1"></use>
                  </svg>
                </a>
              </form>
            </div>

            {% if fn('icl_get_languages') %}
              {% set languages = fn('icl_get_languages') %}
              <div class="language-selector">
                {% for language in languages %}
                  {% if language.active %}
                    <div class="js-lang-btn">
                      <svg class="icon" width="18" height="18">
                        <use xlink:href="{{ theme.path }}/build/spritemap.svg#earth"></use>
                      </svg>
                      <span>{{ language.native_name }}</span>
                    </div>
                  {% endif %}
                {% endfor %}
                <div class="lang-dropdown js-lang-dropdown">
                  <ul>
                    {% for language in languages %}
                      {% if not language.active %}
                        <li>
                          <a href="{{ language.url }}">
                            {{ language.native_name }}
                          </a>
                        </li>
                      {% endif %}
                    {% endfor %}
                  </ul>
                </div>
              </div>
            {% endif %}

            <div class="menu-toggle menu-toggle--only-mobile">
              <div class="svg-hamburger">
                <svg viewBox="0 0 800 600">
                  <path d="M300,220 C300,220 520,220 540,220 C740,220 640,540 520,420 C440,340 300,200 300,200"
                        id="top"></path>
                  <path d="M300,320 L540,320" id="middle"></path>
                  <path d="M300,210 C300,210 520,210 540,210 C740,210 640,530 520,410 C440,330 300,190 300,190"
                        id="bottom"
                        transform="translate(480, 320) scale(1, -1) translate(-480, -318) "></path>
                </svg>
              </div>
            </div>
          </nav>
        </div>
      </div>
    {% endif %}
  </div>

  <nav class="main-nav">
    <div class="navigation">
      <div class="container">
        <div class="row columns-4">
          {% if fn('has_nav_menu', 'mobile') %}
            {% for item in additional_mobile_menu.get_items %}
              <div class="nav-columns" style="display: none;">
                <div class="h4 main-item">
                  <a href="{{ item.get_link }}"><span>{{ item.title }} </span></a>
                  <span class="menu-carret">
                    <svg width="18" height="10" viewBox="0 0 18 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path id="down" d="M0.292893 0.292893C0.683417 -0.0976311 1.31658 -0.0976311 1.70711 0.292893L9 7.58579L16.2929 0.292893C16.6834 -0.0976311 17.3166 -0.0976311 17.7071 0.292893C18.0976 0.683417 18.0976 1.31658 17.7071 1.70711L9.70711 9.70711C9.31658 10.0976 8.68342 10.0976 8.29289 9.70711L0.292893 1.70711C-0.0976311 1.31658 -0.0976311 0.683417 0.292893 0.292893Z" fill="#2C27CE"/>
                    </svg>
                  </span>
                </div>
              </div>
            {% endfor %}
          {% endif %}
        </div>
      </div>
    </div>

  </nav>
</header>