{% block html_head_container %}
{% include 'html-header.twig' %}
    {% block head %}
    {% endblock %}
    </head>
{% endblock %}

<body class="{{ body_class }}" data-template="base.twig">
    <div id="page" class="site">
        <a class="skip-link screen-reader-text" href="#main">{{ __('Skip to content', '_t') }}</a>

        <header id="masthead" class="site-header" role="banner">
            <div class="site-branding">
                {% if fn('is_front_page') and fn('is_home') %}
                    <h1 class="site-title"><a href="{{ site.url }}" rel="home">{{ site.name }}</a></h1>
                {% else %}
                    <p class="site-title"><a href="{{ site.url }}" rel="home">{{ site.name }}</a></p>
                {% endif %}

                {% if site.description or fn('is_customize_preview') %}
                    <p class="site-description">{{ site.description }}</p>
                {% endif %}
            </div><!-- .site-branding -->

            {% if menu %}
                <nav id="site-navigation" class="main-navigation" role="navigation">
                    <button class="menu-toggle" aria-controls="primary-menu" aria-expanded="false">{{ __('Primary Menu', '_t') }}</button>
                    {% include "menu.twig" with {'menu': menu.get_items} %}
                </nav><!-- #site-navigation -->
            {% endif %}
        </header><!-- #masthead -->

        <div id="content" class="site-content">
            {% block content %}
                {% include ['content-none.twig', 'content.twig'] %}
            {% endblock %}
        </div><!-- #content -->

        {{ sidebar }}

        {% block footer %}
            <footer id="colophon" class="site-footer" role="contentinfo">
                {% include 'footer.twig' %}
            </footer><!-- #colophon -->
        {% endblock %}
    </div><!-- #page -->

    {{ function('wp_footer') }}
</body>
</html>
