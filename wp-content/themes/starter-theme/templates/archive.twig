{% extends "base.twig" %}

{% block content %}
    <div id="primary" class="content-area">
        <main id="main" class="site-main" role="main">
            {% if posts %}
                <header class="page-header">
                    {{ fn('the_archive_title', '<h1 class="page-title">', '</h1>') }}
                    {{ fn('the_archive_description', '<div class="taxonomy-description">', '</div>') }}
                </header><!-- .page-header -->

                {% for post in posts %}
                    {# Include the Post-Format-specific template for the content.
                    If you want to override this in a child theme, then include a file
                    called content-___.twig (where ___ is the Post Format name) and that will be used instead. #}
                    {% include ['content-' ~ post.format ~ '.twig', 'content.twig'] %}
                {% endfor %}

                {{ fn('the_posts_navigation') }}
            {% else %}
                {% include ['content-none.twig', 'content.twig'] %}
            {% endif %}
        </main><!-- #main -->
    </div><!-- #primary -->
{% endblock %}
