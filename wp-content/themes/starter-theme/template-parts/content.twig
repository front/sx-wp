{#
/**
 * Template part for displaying posts.
 *
 * @link https://codex.wordpress.org/Template_Hierarchy
 *
 * @package Under_Timber
 */
#}
<article id="post-{{ post.ID }}" {{ fn('post_class') }}>
    <header class="entry-header">
        {% if fn('is_single') %}
            <h1 class="entry-title">{{ post.title }}</h1>
        {% else %}
            <h2 class="entry-title"><a href="{{ post.link }}" rel="bookmark">{{ post.title }}</a></h2>
        {% endif %}

        {% if post.get_post_type.name == 'post' %}
            <div class="entry-meta">
                {{ fn('_t_posted_on') }}
            </div><!-- .entry-meta -->
        {% endif %}
    </header><!-- .entry-header -->

    <div class="entry-content">
        {% set read_more = __('Continue reading %s <span class="meta-nav">&rarr;</span>', '_t')|format('<span class="screen-reader-text">' ~ post.title ~ '</span>') %}
        {{ post.get_preview(50, false, read_more) }}

        {{ fn('wp_link_pages', {
            'before': '<div class="page-links">' ~ __( 'Pages:', '_t' ),
            'after': '</div>'
        }) }}
    </div><!-- .entry-content -->

    <footer class="entry-footer">
        {{ fn('_t_entry_footer') }}
    </footer><!-- .entry-footer -->
</article><!-- #post-## -->
