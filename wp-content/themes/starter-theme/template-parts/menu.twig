{% if menu %}
<ul class="menu-item {{ class }}">
  {% for item in menu %}
    <li class="{{item.classes | join(' ')}} {{ item_class }}">
      <a href="{{ item.get_link }}">
        <span>{{ item.title }}</span>
      </a>
      {% include "menu.twig" with { 'menu': item.get_children } %}
    </li>
    {% endfor %}
  </ul>
{% endif %}
