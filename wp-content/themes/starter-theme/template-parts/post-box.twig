<div class="articles__item">
    <article class="article">
        <img class="article__img" src="{{ (post.thumbnail and post.thumbnail._wp_attachment_metadata != 'a:0:{}') ? post.thumbnail.src|resize(250, 250) : theme.link ~ '/src/icons/250x250.svg' }}" alt="article img">
        <div class="article-info">
            <div class="article-info__header">
                <div>
                    <hr class="wp-block-separator is-short no-margin-top no-margin-left">
                    <div class="article-info__tag">{{ post.tags|join(', ')}}</div>
                    <a href="{{ post.link }}">
                        <h1 class="article-info__title">{{ half ? post.title|excerpt[:30] ~ ' ...' : post.title }}</h1>
                    </a>
                </div>
                <img class="article__img-mobile" src="{{ (post.thumbnail and post.thumbnail._wp_attachment_metadata != 'a:0:{}') ? post.thumbnail.src|resize(100, 100) : theme.link ~ '/src/icons/250x250.svg' }}" alt="article img">
            </div>
          <div class="article-info__credits">
            {{ __('by', '_t') }} <span class="article-info__author">{{ post.author }}</span> | <span class="article-info__date">{{ post.date }}</span>
          </div>
          <p class="article-info__content">
            {{ half ? post.post_excerpt|excerpt(25) : post.post_excerpt|excerpt(50) }}
          </p>
        </div>
    </article>
</div>
